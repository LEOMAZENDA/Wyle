                <span asp-validation-for="@Model.Senha" class="text-danger"></span>
            </div>
        }*@

    <div class="mt-3">
        <button class="btn btn-success" type="submit" asp-action="CreateOuEdit">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
