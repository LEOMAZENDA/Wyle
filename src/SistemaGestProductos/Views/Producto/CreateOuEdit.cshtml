@model Models.Entidades.Producto

@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = ("Alterando producto");
    else
        ViewBag.Subtitulo = ("Cadastrando novo producto");
}

<h3 class=" text-secondary">@ViewBag.Subtitulo</h3>

<form asp-action="CreateOuEdit" class="row">
    <input type="hidden" asp-for="@Model.Id" />
    <div class=" row form-group col-sm-8 col-lg-4 p-2">
        <label class="text-black-50" asp-for="@Model.Nome">Nome do Producto</label>
        <input asp-for="@Model.Nome" class="form-control" autofocus" />
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class=" row form-group col-sm-8 col-lg-4 p-2">
        <label asp-for="@Model.IdCategoria">Categoria:</label><br />
        <select asp-for="@Model.IdCategoria" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Categorias"></select>
        <span asp-validation-for="@Model.IdCategoria" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class=" row form-group col-sm-4 col-lg-2 p-2">
        <label asp-for="@Model.Estoque">Estoque:</label><br />
        <input asp-for="@Model.Estoque" class="form-control" />
        <span asp-validation-for="@Model.Estoque" class="text-danger"></span>
    </div>
    <div class=" row form-group col-sm-4 col-lg-2 p-2">
        <label asp-for="@Model.Preco">Preço Unitário:</label><br />
        <input asp-for="@Model.Preco" class="form-control" />
        <span asp-validation-for="@Model.Preco" class="text-danger">   </span>
    </div>

    <div class="w-100"></div>
    <div class=" row form-group col-sm-8 col-lg-4 p-2">
        <label asp-for="@Model.Obs">Observação:</label>
        <textarea asp-for="@Model.Obs">Observação:</textarea>
        <span asp-validation-for="@Model.Obs" class="text-danger"></span>
    </div>
    <div class="w-100"></div>

    <div class="mt-3">
        <button class="btn btn-success" type="submit" asp-action="CreateOuEdit">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
