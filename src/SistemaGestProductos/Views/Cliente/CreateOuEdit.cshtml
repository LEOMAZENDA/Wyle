@model Models.Entidades.Cliente

@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = ("A alterar Cliente");
    else
        ViewBag.Subtitulo = ("A Cadastrar novo Cliente");
}

<h3 class=" text-secondary">@ViewBag.Subtitulo</h3>


<form asp-action="CreateOuEdit" class="row">
    <input type="hidden" asp-for="@Model.Id" />
    <div class=" col form-group col-sm-8 col-lg-4  p-2">
        <input asp-for="@Model.Nome" class="form-control" placeholder="Digita o nome complecto." />
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <br />

    <div class="col form-group col-sm-8 col-lg-4 p-2">
        <input asp-for="@Model.TelefoneNº" class="form-control" placeholder="Informar o nº de telefone do cliente." />
        <span asp-validation-for="@Model.TelefoneNº" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <br />

    <div class="col form-group col-sm-8 col-lg-4 p-2">
        <input asp-for="@Model.Email" class="form-control" placeholder="Informar o E-mail do Cliente." />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <br />
