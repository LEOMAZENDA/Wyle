@model Models.Entidades.Funcionario

@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = ("Alterando funcionario");
    else
        ViewBag.Subtitulo = ("Cadastrando novo funcionario");
}

<h3 class=" text-secondary">@ViewBag.Subtitulo</h3>

<form asp-action="CreateOuEdit" class="row">
    <input type="hidden" asp-for="@Model.Id" />
    <div class=" row form-group col-sm-8 col-lg-4 p-2">
        <label class="text-black-50" asp-for="@Model.Nome">Nome do Funcionario</label>
        <input asp-for="@Model.Nome" class="form-control" autofocus" />
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class=" row form-group col-sm-4 col-lg-2 p-2">
        <label asp-for="@Model.DataNascimento">Data de nascimento:</label><br />
        <input asp-for="@Model.DataNascimento" class="form-control" type="date" />
        <span asp-validation-for="@Model.DataNascimento" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class=" row form-group col-sm-4 col-lg-2 p-2">
        <label asp-for="@Model.IdFuncao">Função:</label><br />
        <select asp-for="@Model.IdFuncao" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Funcoes"></select>
        <span asp-validation-for="@Model.IdFuncao" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class=" row form-group col-sm-8 col-lg-4 p-2">
        <label asp-for="@Model.Email">E-Mail:</label><br />
        <input asp-for="@Model.Email" class="form-control" type="email" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    @if (!Context.Request.RouteValues.ContainsKey("id"))
    {
        <div class=" row form-group col-sm-8 col-lg-4 p-2">
            <label asp-for="@Model.Senha">Senha:</label><br />
            <input asp-for="@Model.Senha" class="form-control" type="password" />
            <span asp-validation-for="@Model.Senha" class="text-danger">   </span>
        </div>
    }
    <div class="w-100"></div>

    <div class="mt-3">
        <button class="btn btn-success" type="submit" asp-action="CreateOuEdit">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
