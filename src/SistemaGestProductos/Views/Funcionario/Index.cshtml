@model IEnumerable<Funcionario>
@{
    ViewBag.Subtitulo = "Funcionarios";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-secondary">Todos os @ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="CreateOuEdit" class="text-decoration-none btn btn-primary">Adicionar Funcionario</a>
    </div>
</header>
<hr />

<partial name="_Mensagem" />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover tabela-categorias">
        <thead class="table-dark">
            <tr>
                <th>CÓDIGO</th>
                <th>NOME</th>
                <th>E-MAIL</th>
                <th>IDADE</th>
                <th>FUNÇÃO </th>
                <th>ACÇÕES</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var funcionario in Model)
            {
            <tr>
                <td>@funcionario.Id.ToString("D3")</td>
                <td>@funcionario.Nome</td>
                <td>@funcionario.Email</td>
                <td>@funcionario.Idade</td>
                <td>@funcionario.Funcao.Nome</td>
                <td>
                    <a asp-action="CreateOuEdit" asp-route-id="@funcionario.Id" class="btn btn-outline-warning badge">Alterar</a>
                    <a asp-action="Delete" asp-route-id="@funcionario.Id" class="btn btn-outline-danger badge">Excluir</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="text-danger">Sem registos de momento.</h4>
    <h5 class="text-dark text-md-end">Pode efectuar um registo em <span class="text-secondary">"Adicionar Funcionario"</span>.</h5>
}