@model IEnumerable<Models.EStudenteModel>

@{
    ViewBag.Subtitulo = "Estudantes";
}

<div class="row">
    <div class="col col-12">
        <header class="row align-items-center">
            <div class="card-header py-3 no-bg bg-transparent d-flex align-items-center px-0 justify-content-between border-bottom">
                <h2 class="text-secondary">@ViewBag.Subtitulo</h2>
                <div class="col-auto d-flex">
                    <a type="button" asp-action="AddOrEdit" class="btn btn-primary ">
                        <i class="icofont-plus-circle me-2 fs-6"></i>Adicionar</a>
                </div>
            </div>
        </header>  
    </div>
</div>

<partial name="_Mensagem" />

<div class="row">
    <div class="col col-12">

        @if (Model.Count() > 0)
        {
            <table class="table table-striped table-hover tabela-categorias">
                <thead class="table table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nome do estudante</th>
                        <th>Morada</th>
                        <th>Contacto</th>
                        <th>Idade</th>
                        <th>Acções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IdEstudant)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.Morada)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                            <td>@Html.DisplayFor(modelItem => item.Idade)</td>
                            <td>
                                <a class="btn btn-outline-warning badge" asp-action="AddOrEdit" asp-route-id="@item.IdEstudant">Actualizar</a> |
                                <a class="btn btn-outline-danger badge" asp-action="Delete" asp-route-id="@item.IdEstudant">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <h4 class="text-danger">Sem registos de momento.</h4>
            <h5 class="text-dark text-md-end">Pode efectuar um registo em <span class="text-secondary">Adicionar</span>.</h5>
        }
    </div>
</div>
